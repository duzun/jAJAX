{
  "name": "jajax.js",
  "version": "1.3.3",
  "description": "jQuery-like AJAX method for multiple environments",
  "author": {
    "name": "Dumitru Uzun",
    "email": "contact@duzun.me",
    "url": "https://DUzun.Me/"
  },
  "reveal": true,
  "keywords": [
    "AJAX",
    "HTTP",
    "request",
    "chrome-extension",
    "safari-extension",
    "firefox-extension",
    "addon",
    "javascript",
    "jQuery"
  ],
  "main": "dist/jajax.js",
  "module": "jajax.js",
  "esnext": "jajax.js",
  "unpkg": "dist/jajax.min.js",
  "files": [
    "jajax.js",
    "dist/",
    "LICENSE",
    "README.MD"
  ],
  "directories": {
    "tools": "./tools",
    "doc": "./docs",
    "distribution": "./dist"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/duzun/jAJAX.git"
  },
  "bugs": {
    "url": "https://github.com/duzun/jAJAX/issues"
  },
  "license": [
    {
      "type": "MIT",
      "url": "https://github.com/duzun/jAJAX/raw/master/LICENSE"
    }
  ],
  "readmeFilename": "README.md",
  "scripts": {
    "test": "jasmine-node spec",
    "verup": "verup",
    "build": "npm test && gccs --compilation_level WHITESPACE_ONLY --formatting pretty_print -- jajax.js dist/jajax.js && gccs dist/jajax.js",
    "doc": "docco jajax.js"
  },
  "peerDependencies": {
    "xmlhttprequest": "*"
  },
  "devDependencies": {
    "docco": "^0.7",
    "gccs": "^1.2",
    "jasmine-node": "1.14",
    "verup": "1.x"
  },
  "jshintConfig": {
    "laxbreak": true,
    "laxcomma": true,
    "undef": true,
    "unused": true,
    "sub": true,
    "expr": true,
    "bitwise": false,
    "eqeqeq": false,
    "boss": true,
    "eqnull": true,
    "scripturl": true,
    "-W041": false
  },
  "verup": {
    "files": [
      "jajax.js",
      "bower.json",
      "README.md"
    ],
    "regs": [
      "^((?:\\$|(\\s*\\*\\s*@)|(\\s*(?:var|,)?\\s+))version[\\s\\:='\"]+)([0-9]+(?:\\.[0-9]+){2,2})",
      "^(\\s?\\*.*v)([0-9]+(?:\\.[0-9]+){2,2})"
    ]
  }
}
